<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= Lib.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= Lib.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAutors">Авторы</label>
        <input
                type="text"
                value="<%= Lib.authors %>"
                name="authors"
                class="form-control"
                id="inputAutors"
        ></input>
    </div>

    <div class="form-group">
        <label for="inputFavourite">Избранная книга</label>
        <input
                type="checkbox"
                checked="true"
                name="favourite"
                class="form-control"
                id="inputFavourite"
        ></input>
    </div>

    <div class="form-group">
        <label for="inputFileBook">Файл книги</label>
        <input
                type="file"
                name="fileBook"
                class="form-control"
                id="inputFileBook"
        ></input>
        <%= Lib.fileName %>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>